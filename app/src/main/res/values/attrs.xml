<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InputNumberView">
        <attr name="max" format="integer" />
        <attr name="min" format="integer" />
        <attr name="step" format="integer" />
        <attr name="defaultValue" format="integer" />
        <attr name="btnBackground" format="reference" />
        <attr name="disable" format="boolean" />
    </declare-styleable>

    <style name="numKeyBoard">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/selector_num_key_board_bg</item>
    </style>

    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LoginPageView">
        <attr name="verifyCodeSize" format="integer" />
        <attr name="mainColor" format="color" />
    </declare-styleable>

</resources>